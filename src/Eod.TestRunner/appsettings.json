{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "TradesTopic": "trades.raw",
    "DlqTopic": "trades.dlq",
    "ConsumerGroupId": "test-runner-group"
  },
  "SchemaRegistry": {
    "Url": "http://schema-registry:8081",
    "Enabled": true,
    "AutoRegisterSchemas": true,
    "CompatibilityLevel": "BACKWARD",
    "SubjectNamingStrategy": "TopicName",
    "RequestTimeoutMs": 30000,
    "MaxCachedSchemas": 1000
  },
  "Redis": {
    "ConnectionString": "redis:6379"
  },
  "SqlServer": {
    "ConnectionString": "Server=sqlserver;Database=EodTrades;User Id=sa;Password=${MSSQL_SA_PASSWORD};TrustServerCertificate=True"
  },
  "OpenTelemetry": {
    "OtlpExporterEndpoint": "http://otel-collector:4317"
  },
  "Metrics": {
    "KafkaExporterUrl": "http://kafka-exporter:9308",
    "RedisExporterUrl": "http://redis-exporter:9121"
  }
}
