{
  "name": "EOD Burst System",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "forwardPorts": [
    8080, 8081, 8082, 8083,
    3000, 9090, 16686,
    8090, 8091, 9000, 9001
  ],

  "portsAttributes": {
    "8083": { "label": "ğŸ§ª Test Dashboard", "onAutoForward": "openBrowser" },
    "3000": { "label": "ğŸ“Š Grafana" },
    "16686": { "label": "ğŸ” Jaeger" },
    "8090": { "label": "ğŸ“¨ Kafka UI" },
    "9001": { "label": "ğŸ“¦ MinIO Console" }
  },

  "postCreateCommand": "cp .env.example .env && docker compose pull",
  
  "postStartCommand": "docker compose up -d",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}
